<h3>予定を編集してください</h3>

<%= render "shared/error", obj: @post %> <!--ここを追加する-->
<%= form_with model: @post do |f| %>

  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :begin ,"開始日" %></th>
      <td><%= f.date_field :begin %></td>
    </tr>

    <tr>
      <th><%= f.label :end ,"終了日" %></th>
      <td><%= f.date_field :end %></td>
    </tr>

    <tr>
      <th><%= f.check_box :allday, {}, '○', '' %></th>
      <td><%= f.label :allday ,"終日の場合はチェックを入れます" %></td>
    </tr>

    <tr>
      <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :schedule_memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "キャンセル", :posts %></li>
    </ul>
  </div>
<% end %>
